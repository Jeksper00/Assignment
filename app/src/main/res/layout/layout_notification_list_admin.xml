<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:theme="@style/Theme.Admin"
    android:foreground="?selectableItemBackground"
    android:visibility="visible"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:id="@+id/admin_notification_firstLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#97A4F3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notificationIdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="TextView"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/admin_notificationTitleView"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/admin_notificationDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/admin_notification_secondLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_notification_firstLayer"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_notificationDescriptionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/admin_notification_secondLayer">

            <Button
                android:id="@+id/editNotificationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_notificationDescriptionView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="Edit" />

            <Button
                android:id="@+id/deleteNotificationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_notificationDescriptionView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="Delete" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>